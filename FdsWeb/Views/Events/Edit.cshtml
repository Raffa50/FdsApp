@model FdsWeb.ViewModels.CreateEvent

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Event</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <input asp-for="Latitude" id="latitudeInput" class="form-control" type="text" style="display: none;" />
        <input asp-for="Longitude" id="longitudeInput" class="form-control" type="text" style="display: none;" />
        
        <div class="form-group">
            <label class="col-md-2 control-label">Date</label>
            <div id="schedules" class="col-md-10" >
                @foreach( var s in Model.Schedule ) {
                    <div class="input-append" >
                    <input name="Schedule" class="form-control" data-format="dd/MM/yyyy hh:mm:ss" type="text" value="@s" ></input>
                        <span class="add-on" >
                            <i data-time-icon="icon-time" data-date-icon="icon-calendar" >
                            </i>
                        </span>
                    </div>
                }
            </div>
            <div id="addDate">
                <input type="button" class="form-control" onclick="addDate()" value=" + ">  </input>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
        
        <div>
            <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
