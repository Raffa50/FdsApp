@{
    ViewData[ "Title" ] = "Home Page";
}

<div class="carousel slide" data-interval="6000" data-ride="carousel" id="myCarousel" >
    <ol class="carousel-indicators" >
        <li class="active" data-slide-to="0" data-target="#myCarousel" ></li>
        <li data-slide-to="1" data-target="#myCarousel" ></li>
        <li data-slide-to="2" data-target="#myCarousel" ></li>
        <li data-slide-to="3" data-target="#myCarousel" ></li>
    </ol>
    <div class="carousel-inner" role="listbox" >
        <div class="item active" >
            <img alt="logo" class="img-responsive" src="/images/banner1.jpg" />
            <div class="carousel-caption" role="option" >
                <p>
                    Tanti eventi per il 2017
                    <a asp-action="Index" asp-area="" asp-controller="Events" class="btn btn-default" >
                        Vai agli eventi
                    </a>
                </p>
            </div>
        </div>
        <div class="item" >
            <img alt="blah" class="img-responsive center-block" src="~/images/banner2.jpg" />
            <div class="carousel-caption" role="option" >
                <p>
                    Cerca gli eventi che ti interessano
                    <a asp-action="Search" asp-area="" asp-controller="Events" class="btn btn-default" >
                        Cerca
                    </a>
                </p>
            </div>
        </div>
        <div class="item" >
            <img alt="Genova" class="img-responsive center-block" src="~/images/banner3.jpg" />
            <div class="carousel-caption" role="option" >
                <p>
                    Il festival e la città di Genova
                    <a class="btn btn-default" href="#" >
                        Di più
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" data-slide="prev" href="#myCarousel" role="button" >
        <span aria-hidden="true" class="glyphicon glyphicon-chevron-left" ></span>
        <span class="sr-only" >Previous</span>
    </a>
    <a class="right carousel-control" data-slide="next" href="#myCarousel" role="button" >
        <span aria-hidden="true" class="glyphicon glyphicon-chevron-right" ></span>
        <span class="sr-only" >Next</span>
    </a>
</div>

